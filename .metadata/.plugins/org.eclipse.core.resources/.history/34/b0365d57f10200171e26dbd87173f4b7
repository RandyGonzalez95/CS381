#include "as2.h"

AS2::AS2(void)
{
	// Initialize all data members
	entityManager = new EntityMgr();
	float yaw;
	float deltaVeloctiy;
	Ogre::Vector3 velocity, position;
	float keyboardTimer;
	const static float keyTime = 0.01f;


	if(!entityManager->Init())
	{
		std::cerr<< "Entity Manager failed to initialize"<<std::endl;
	}
}

