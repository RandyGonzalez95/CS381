bool InputMgr::frameRenderingQueued(const Ogre::FrameEvent& evt)
{
	mKeyboard->capture();
	if(mKeyboard->isKeyDown(OIS::KC_ESCAPE))
		return false;

	eng->gfxMgr->mTrayMgr->frameRenderingQueued(fe);

	UpdateCamera(fe);
	UpdateVelocity(fe);
	entityManager->Tick(fe.timeSinceLastFrame);

	return true;
}

