#include "EntityMgr.h"

EntityMgr::EntityMgr()
{

}

EntityMgr::EntityMgr(Ogre::SceneManager* mSceneMgr)
{
	sceneMgr = mSceneMgr;
}

EntityMgr::~EntityMgr()
{

}

bool EntityMgr::Init()
{

	return true;
}

Entity381* EntityMgr::CreateEntity(EntityType type, Ogre::Vector3 pos, float heading)
{
	Ogre::String matFile = "\0";
	// Declare Temp
	Entity381* temp;
	temp = new Entity381();

	// Determine our type of boat
	switch(type)
	{
	case Destroyer:
		matFile = "Deck";
		Destroyer* temp = new Entity381();
		break;

	default:
		break;
	}

	// give our object the corresponding mesh file
	temp->ogreEntity = sceneMgr->createEntity(temp->meshFile);
	temp->ogreSceneNode = sceneMgr->getRootSceneNode()->createChildSceneNode(pos); // place object




	// Texture our object
	temp->ogreEntity->setMaterialName("Deck");

	// Add Entity to our list
	entities.push_back(temp);
	numEntities++;

	return entities[numEntities];
}

void EntityMgr::Tick(float dt)
{

}



